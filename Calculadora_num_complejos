#include <iostream>
using namespace std;

int main() {
    double num1, num2;
    char operacion;

    cout << "Introduce el primer número: ";
    cin >> num1;
    cout << "Introduce el operador (+, -, *, /): ";
    cin >> operacion;
    cout << "Introduce el segundo número: ";
    cin >> num2;

    switch (operacion) {
        case '+':
            cout << "Resultado: " << num1 + num2 << endl;
            break;
        case '-':
            cout << "Resultado: " << num1 - num2 << endl;
            break;
        case '*':
            cout << "Resultado: " << num1 * num2 << endl;
            break;
        case '/':
            if (num2 != 0) {
                cout << "Resultado: " << num1 / num2 << endl;
            } else {
                cout << "Error: División por cero." << endl;
            }
            break;
        default:
            cout << "Operador no válido." << endl;
            break;
    }

    return 0;
}
